<!doctype html>
<html lang="id">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Hack-Maxwin — Aktivasi</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body { font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, Arial; background:#f8fafc; }
    .hero-bg { background: linear-gradient(135deg,#064e3b 0%,#047857 60%); color: white; }
 /* hacker-style logo */
.logo-wrap { width:48px; height:48px; display:inline-block; border-radius:10px; background:rgba(255,255,255,0.06); padding:6px; }
.logo-glow svg { filter: drop-shadow(0 6px 12px rgba(4,120,87,0.18)); }
.logo-eyes { transition: fill .25s ease-in-out; }
.logo-wrap:hover .logo-eyes { fill: #10b981; transform: translateY(-1px); }
</style>
</head>
<body class="min-h-screen">
  <header class="hero-bg py-6">
    <div class="max-w-4xl mx-auto px-4 flex items-center justify-between">
      <div class="flex items-center gap-4">
       <!-- replace old small SVG with image logo -->
<a href="/" class="inline-flex items-center gap-3" title="Hack-Maxwin">
  <img src="{{ url_for('static', filename='logo_circle.png') }}" alt="Hack-Maxwin" class="site-logo" />
</a>


        </div>
        <div>
          <div class="text-lg font-semibold">Hack-Maxwin</div>
          <div class="text-sm text-white/80">Alat aktivasi cepat</div>
        </div>
      </div>
    </div>
  </header>

  <main class="max-w-4xl mx-auto px-4 -mt-12">
    <!-- FORM: pilih opsi + provider, lalu submit -->
<form id="activateForm" method="POST" action="/activate">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
    <!-- main options -->
    <label class="flex items-center gap-3 p-3 border rounded-lg">
      <input type="checkbox" name="option" value="freespin" class="h-5 w-5 accent-emerald-600" />
      <span class="font-medium">Cheat Freespin</span>
    </label>

    <label class="flex items-center gap-3 p-3 border rounded-lg">
      <input type="checkbox" name="option" value="maxwin" class="h-5 w-5 accent-emerald-600" />
      <span class="font-medium">Cheat Maxwin</span>
    </label>
  </div>

  <div class="mb-4">
    <div class="text-sm text-gray-500 mb-2">Pilih Provider</div>

    <details class="mb-2 bg-gray-50 border rounded-lg p-3">
      <summary class="cursor-pointer font-medium">Pragmatic Play</summary>
      <div class="mt-2 text-sm text-gray-700">
        <label class="flex items-center gap-2"><input type="checkbox" name="provider" value="Pragmatic Play" /> Pilih Pragmatic Play</label>
      </div>
    </details>

    <details class="mb-2 bg-gray-50 border rounded-lg p-3">
      <summary class="cursor-pointer font-medium">PG Soft</summary>
      <div class="mt-2 text-sm text-gray-700">
        <label class="flex items-center gap-2"><input type="checkbox" name="provider" value="PG Soft" /> Pilih PG Soft</label>
      </div>
    </details>

    <details class="mb-2 bg-gray-50 border rounded-lg p-3">
      <summary class="cursor-pointer font-medium">Habanero</summary>
      <div class="mt-2 text-sm text-gray-700">
        <label class="flex items-center gap-2"><input type="checkbox" name="provider" value="Habanero" /> Pilih Habanero</label>
      </div>
    </details>

    <details class="mb-2 bg-gray-50 border rounded-lg p-3">
      <summary class="cursor-pointer font-medium">Spade Gaming</summary>
      <div class="mt-2 text-sm text-gray-700">
        <label class="flex items-center gap-2"><input type="checkbox" name="provider" value="Spade Gaming" /> Pilih Spade Gaming</label>
      </div>
    </details>
  </div>

  <!-- submit: disabled sampai minimal satu option dicentang -->
  <div class="mt-4">
    <button id="activateSubmit" type="submit" class="px-5 py-3 bg-emerald-600 text-white rounded-lg" disabled>Lanjutkan</button>
  </div>
</form>

<script>
  // enable submit only when at least one main option is checked
  (function(){
    const form = document.getElementById('activateForm');
    const submitBtn = document.getElementById('activateSubmit');
    const mainChecks = form.querySelectorAll('input[name="option"]');

    function updateSubmit() {
      const any = Array.from(mainChecks).some(c => c.checked);
      submitBtn.disabled = !any;
    }

    mainChecks.forEach(c => c.addEventListener('change', updateSubmit));
    updateSubmit();
  })();
</script>


    <footer class="mt-8 text-sm text-gray-600 text-center">
      © <span id="year"></span> Hack-Maxwin
    </footer>
  </main>

  <script>document.getElementById("year").textContent = new Date().getFullYear();</script>
</body>
</html>
